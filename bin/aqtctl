#!/usr/bin/bash
if [ $# -lt 1 ] ; then
  echo " aqtctl [start|stop] [HTTP|TMAX|TCP]"
  exit ;
fi
# AQTTYPE ( TMAX, HTTP ) 
declare -u AQTTYPE=${2:-'HTTP'}
cd $AQTHOME

function jobs_f1 {
  echo `ps -ef |egrep "./(aqt_execMst|aqt_request)" |grep -v grep | awk '{printf "%d ",$2}'` ;
}

function jobs_f2 {
  echo `ps -ef |egrep "node (aqt_execJob|aqt_resend)\.js" |grep -v grep | awk '{printf "%d ",$2}'` ;
}

# tmax type start
function start_f1 {
  cd $AQTHOME/cbin ;
  JOBS=$(jobs_f1) ;
  if  [ ${#JOBS} -gt 0 ]  ; then
    if [ $1 == 'start' ] ; then
      echo "이미 실행중입니다."; 
      return ; 
    else
      kill ${JOBS} 2>/dev/null ;
    fi
  fi
  LOGF="${AQTLOG}/"`date +%Y%m%d`"_$$.rlog"

  nohup ./aqt_execMst.sh >/dev/null &
  nohup ./aqt_request >$LOGF 2>&1 &
}

function stop_f1 {
  cd $AQTHOME/cbin ;
  JOBS=$(jobs_f1) ;
  if [ ${#JOBS} -gt 0 ]; then
    kill ${JOBS} 2>/dev/null ;
  else
    echo "중지할 작업이 없습니다.";
  fi
}

# http type start
function start_f2 {
  cd $AQTHOME/jsbin ;
  JOBS=$(jobs_f2) ;
  if  [ ${#JOBS} -gt 0 ]  ; then
    if [ $1 == 'start' ] ; then
      echo "이미 실행중입니다."; 
      return ; 
    else
      kill ${JOBS} 2>/dev/null ;
    fi
  fi
  # LOGF1="${AQTLOG}/"`date +%Y%m%d`"_$$.jslog"
  # LOGF2="${AQTLOG}/"`date +%Y%m%d`rs"_$$.jslog"

  nohup node aqt_execJob.js & # >$LOGF1 2>&1 &
  nohup node aqt_resend.js & # >$LOGF2 2>&1 &

}
function stop_f2 {
  cd $AQTHOME/cbin ;
  JOBS=$(jobs_f2) ;
  if [ ${#JOBS} -gt 0 ]; then
    kill ${JOBS} 2>/dev/null ;
  else
    echo "중지할 작업이 없습니다.";
  fi
}

case $1 in
  start|restart|reload)
    echo "deamon start ${AQTTYPE}";
    if [ "${AQTTYPE}" == 'TMAX' ];then
      start_f1 $1 ;
    else
      start_f2 $1 ;
    fi
    ;;
  stop)
    echo "Deamon stop"
    if [ "${AQTTYPE}" == 'TMAX' ];then
      stop_f1 $1 ;
    else
      stop_f2 $1 ;
    fi
    ;;
  *)
    echo "$0 [start stop restart]"
    ;;
esac
